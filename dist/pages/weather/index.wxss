    font-family: helvetica-ultra-light;
    font-size: 240rpx;
    display: inline-block;
    vertical-align: top; }
  .now .temp text.degree {
    font-size: 80rpx; }
  .now .cur-weather {
    font-size: 32rpx;
    margin-bottom: 40rpx;
    line-height: 1;
    position: relative; }
    .now .cur-weather icon {
      font-size: 32rpx;
      margin-right: 10rpx; }
    .now .cur-weather .inline {
      margin-bottom: 30rpx;
      font-size: 32rpx; }
      .now .cur-weather .inline:last-child {
        margin-bottom: 0; }
    .now .cur-weather .today {
      display: flex;
      flex-direction: row; }
      .now .cur-weather .today .item {
        display: block;
        padding-right: 16rpx;
        margin: 0 16rpx 0 0;
        border-right: 2rpx solid rgba(255, 255, 255, 0.4);
        font-size: 28rpx;
        flex: 1;
        text-align: right; }
        .now .cur-weather .today .item:last-child {
          text-align: left;
          border: none;
          padding: 0;
          margin: 0; }

